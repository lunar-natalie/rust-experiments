{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Workspace",
            "type": "shell",
            "command": "${workspaceRoot}/setup.sh",
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "cargo",
            "command": "test",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "Serve web-sort",
            "type": "shell",
            "command": "trunk serve",
            "options": {
                "cwd": "${workspaceRoot}/apps/web-sort"
            },
            "problemMatcher": [
                "$rustc-watch"
            ],
            "isBackground": true
        }
    ]
}